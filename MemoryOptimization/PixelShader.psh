///////////////////////////////////////////////////////
// 構造体宣言ブロック
///////////////////////////////////////////////////////
struct pixelInput
{
    float4 pos : SV_POSITION;
    float2 tex : TEXCOORD0;
    float4 col : COLOR0;
};

///////////////////////////////////////////////////////
// グローバル
///////////////////////////////////////////////////////
Texture2D gTexture : register(t0);
SamplerState gSampler : register(s0);

///////////////////////////////////////////////////////
// ピクセルシェーダプログラムブロック
///////////////////////////////////////////////////////
float4 ps_main(pixelInput inData) : SV_Target
{
    float4 texcol = gTexture.Sample(gSampler, inData.tex);
    float4 retcol = texcol + inData.col;
//    float4 retcol = texcol * inData.col; //float4(inData.col.rgb, texcol.a);
    return retcol;
}